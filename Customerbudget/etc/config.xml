<?xml version="1.0"?>
<config>
    <modules>
        <Magentothem_Customerbudget>
            <version>0.1.3</version>
        </Magentothem_Customerbudget>
    </modules>
	<default>
        <design>
            <admin>
                <theme>ma_alexis</theme>
            </admin>
        </design>
	</default>
	<frontend>
        <routers>
            <customerbudget>
                <use>standard</use>
                <args>
                    <module>Magentothem_Customerbudget</module>
                    <frontName>customerbudget</frontName>
                </args>
            </customerbudget>
        </routers>
		<events>
	        <checkout_onepage_controller_success_action>
	           	<observers>
	               <monkey_subscribe_checkoutsuccess>
	                   <class>monkey/observer</class>
	                   <method>registerCheckoutSuccess</method>
	               </monkey_subscribe_checkoutsuccess>
	         	</observers>
	        </checkout_onepage_controller_success_action>
		</events>
	</frontend>
    <admin>
        <routers>
			<customerbudget>
				<use>admin</use>
				<args>
					<module>Magentothem_Customerbudget</module>
					<frontName>customerbudget</frontName>
				</args>
			</customerbudget>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<customer module='customer'>
				<children>
					<customerbudget module="customerbudget">
					  <title>Customer Budget</title>
					  <sort_order>0</sort_order>
					  <children>
								<managecustomerbudget module="customerbudget">
								  <title>Manage Customer Budget</title>
								  <sort_order>0</sort_order>
								  <action>customerbudget/adminhtml_customerbudget</action>
								</managecustomerbudget>
					  </children>
					</customerbudget>
				</children>
			</customer>
		</menu>
		<acl>
        <resources>
          <all>
            <title>Allow Everything</title>
          </all>
          <admin>
              <children>
                  <customer>
                      <children>
                          <customerbudget>
                              <title>Customer Budget</title>
                              <sort_order>54</sort_order>
                              <children>
                                  <managecustomerbudget module="customerbudget">
                                      <title>Manage Customer Budget</title>
                                  </managecustomerbudget>
                              </children>
                          </customerbudget>
                      </children>
                  </customer>
              </children>
          </admin>
        </resources>
      </acl>
		<layout>
			<updates>
				<customerbudget>
					<file>customerbudget.xml</file>
				</customerbudget>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <magentothem_customerbudget>
                <class>Magentothem_Customerbudget_Model</class>
                <resourceModel>customerbudget_resource</resourceModel>
            </magentothem_customerbudget>
            <customerbudget_resource>
                <class>Magentothem_Customerbudget_Model_Resource</class>
                <entities>
                    <customerbudget>
                        <table>magentothem_customerbudget</table>
                    </customerbudget>
                </entities>
            </customerbudget_resource>
        </models>
        <resources>
            <magentothem_customerbudget_setup>
                <setup>
                    <module>Magentothem_Customerbudget</module>
                </setup>
            </magentothem_customerbudget_setup>
        </resources>
        <blocks>
            <customerbudget>
                <class>Magentothem_Customerbudget_Block</class>
            </customerbudget>
        </blocks>
        <helpers>
            <customerbudget>
                <class>Magentothem_Customerbudget_Helper</class>
            </customerbudget>
        </helpers>
    </global>
</config>