            <tab>axaltaconfiguration</tab>
            <sort_order>15</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <catalogconf translate='label'>
                    <label>Catalog</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <productdpp translate='label'>
                                <label>Fetch Product Based on DPP</label>
                                <frontend_type>multiselect</frontend_type>
                                <source_model>axaltacore_customuser/salesarea</source_model>
                                <sort_order>2</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                                <can_be_empty>1</can_be_empty>
                        </productdpp>
                    </fields>
                </catalogconf>
            </groups>
            <groups>
                <ordertype translate='label'>
                    <label>Order Type</label>
